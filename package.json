{
  "name": "riot",
  "version": "1.0.0",
  "description": "Riot - Workflow Monitoring",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node .",
    "dev": "nodemon --exec ts-node src/index.ts --watch src",
    "test": "jest",
    "test:watch": "jest --watch",
    "tsoa:routes": "tsoa routes",
    "tsoa:swagger": "tsoa swagger"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shakenbytes/riot.git"
  },
  "keywords": [
    "workflow monitoring",
    "business event tracking"
  ],
  "author": "Shaken Bytes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shakenbytes/riot/issues"
  },
  "homepage": "https://github.com/shakenbytes/riot#readme",
  "engines": {
    "node": "10.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && npm test"
    }
  },
  "dependencies": {
    "@types/supertest": "2.0.8",
    "express": "4.17.1",
    "swagger-ui-express": "4.1.2",
    "tsoa": "2.5.11"
  },
  "devDependencies": {
    "@types/express": "4.17.2",
    "@types/jest": "24.0.25",
    "@types/node": "13.1.4",
    "@types/swagger-ui-express": "4.1.1",
    "husky": "4.0.7",
    "jest": "24.9.0",
    "nodemon": "2.0.2",
    "supertest": "4.0.2",
    "ts-jest": "24.3.0",
    "ts-node": "8.5.4",
    "tslint": "5.20.1",
    "typescript": "3.7.4"
  }
}
